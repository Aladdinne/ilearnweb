{% extends "indexs.html.twig" %}
{% block body %}
<style>
table, tr, td ,th {
  border: 3px solid black;
  padding-left: 20px;  
}
table{
    width:100%;
    height:30%;
}
tr{
  height:30%;
}
th{
  color:black;
  text-shadow: 3px;
  background-color: #3215;
}
</style>
<h4>Votre Elements Commande.</h4>
<table>
<th>Prix</th>
<th>Nom De Formation</th>
<th>Description</th>
<th>Duree</th>
<th>Action</th>
{% set somme = 0 %}
{% for i in ll %}
{% for j in ff %}
{% if i.idformation == j.idformation %}
<tr>
<td>
{{j.prix}}
</td>
<td>
{{j.nomformation}}
</td>
<td>
{{j.description}}
</td>
<td>
{{j.duree}}
</td>
<td><a href="{{path('removeLigne',{id:i.idlignecommand,idc:i.idcommand})}}">Remove</td>
{% set somme = somme+ j.prix %}
{% endif %}
{% endfor %}
</tr>
{% endfor %}
</table>
<h5>Total : {{somme}} DT</h5> 
<button class="icon"><a href="{{path('fff')}}">Retour</button>
{% endblock %}
